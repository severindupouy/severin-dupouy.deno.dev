<header class="shadowed">
  <nav class="flex justify-between p-5">
    <div class="ml-8 md:ml-16">
      <a href="/" aria-label="Go back Home" class="hover:opacity-50">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="currentColor"
          class="h-12 w-12">
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M2.25 12l8.954-8.955c.44-.439 1.152-.439 1.591 0L21.75 12M4.5 9.75v10.125c0 .621.504 1.125 1.125
              1.125H9.75v-4.875c0-.621.504-1.125 1.125-1.125h2.25c.621 0 1.125.504 1.125 1.125V21h4.125c.621 0 1.125-.504
              1.125-1.125V9.75M8.25 21h8.25"/>
        </svg>
      </a>
    </div>
    <ul class="items-center flex flex-col sm:flex-row">
      {% for page in search.pages("type=posts-list|page", "navbar_order") %}
        <li class="mx-0 sm:mx-5 my-1 sm:my-0">
          <a class="decorate-links" href="{{ page.url }}" aria-label="Navigate to {{ page.url }}">
            {{ page.title }}
          </a>
        </li>
      {% endfor %}
    </ul>
  </nav>
</header>