<section>
  <div class="mt-5">
    <h1 class="text-center">{{ title }}</h1>
  </div>
  <ul role="list" class="grid grid-flow-col auto-cols-max">
    {% for item in items %}
      <li class="w-[20rem]">
        <div class="rounded bg-stone-500/50 shadowed flex flex-col justify-between">
          <header class="mt-3">
            <h3 class="text-center">{{ item.title }}</h3>
          </header>
          <main class="p-3">
            <p>
              {{ item.details }}
            </p>
          </main>
          <footer class="border-t border-black text-center">
            {{ item.summary }}
          </footer>
        </div>
      </li>
    {% endfor %}
  </ul>
</section>