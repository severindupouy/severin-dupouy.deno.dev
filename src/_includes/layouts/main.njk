<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1"/>
    <link rel="alternate" type="application/rss+xml" href="{{"/rss/feed.rss" | url(true)}}" title="RSS feed">
    <link rel="alternate" type="application/feed+json" href="{{"/rss/feed.json" | url(true)}}" title="JSON RSS feed">
    <link rel="icon" href="/static/favicon.svg" sizes="any" type="image/svg+xml">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/highlightjs/cdn-release@11.8.0/build/styles/hybrid.min.css">
    <link rel="stylesheet" href="/styles/base.css">
    <title>{{ title }} | {{resume.basics.name}}</title>
  </head>
  <body class="{{globals.themeMode}}">
    <div class="flex flex-col justify-between h-screen">
      <div class="bg-zinc-100/80">
        {{ comp.layout.navbar() | safe }}
      </div>
      <div class="bg-zinc-100/80 flex">
        <div class="border border-slate-500 w-1/2 h-1/2">
          {{ comp.ui.ParticlesAnimation() | safe }}
        </div>
      </div>
      <main class="mx-auto md:my-16 md:w-4/5">
        {{ content | safe  }}
      </main>
      <div class="bg-zinc-100">
        {{ comp.layout.footer() | safe }}
      </div>
    </div>
  </body>
</html>